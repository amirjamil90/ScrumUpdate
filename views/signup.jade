extends layout
block content
  h1= title
  input(type="submit"  class="btn btn-primary" name="blck" value="BACK" onclick="back()")

  script(type='text/javascript').
     function back(){
        window.history.back();
       }

  DIV(ALIGN="CENTER")
   h1="SIGN UP FOR SCRUM UPDATE"
  div(class="signin" align="center")
   form(class="form-horizontal" action ="/signup" role="form" method='POST')
    div(class="form-group" align="center")
      label(class="control-label col-sm-2" for="Username") Username 
      div(class="col-sm-10")
       input(type="text" name="username" class="form-control" maxlength="20")
    div(class="form-group" align="center")
      label(for="Password" class="control-label col-sm-2") Password
      div(class="col-sm-10")
       input(type="password" class="form-control" name="password" maxlength="10")
    div(class="form-group" align="center")
      label(class="control-label col-sm-2" for="Password") Confirm Password
      div(class="col-sm-10")
       input(type="password" class="form-control" name="cnfpassword" maxlength="10")

    
    div(class="form-group") 
     div(class="col-sm-offset-2 col-sm-10")
      input(type="submit" class="btn btn-primary" name="submit" value="SUBMIT")
